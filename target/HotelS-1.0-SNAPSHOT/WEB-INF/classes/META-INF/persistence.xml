<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    
    <persistence-unit name="hotelPU" transaction-type="JTA">
        <jta-data-source>jdbc/hotelDB</jta-data-source>
        <class>com.hotel.model.Usuario</class>
        <class>com.hotel.model.Huesped</class>
        <class>com.hotel.model.Hotel</class>
        <class>com.hotel.model.Habitacion</class>
        <class>com.hotel.model.Reserva</class>
        <class>com.hotel.model.ServicioExtra</class>
        <class>com.hotel.model.Factura</class>
        <class>com.hotel.model.DetalleServiciosReserva</class>
        <class>com.hotel.model.HuespedReserva</class>
        <class>com.hotel.model.HuespedReservaId</class>
        
        <properties>
            
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.logging.sql" value="true"/>
            
            <!-- Dialecto para PostgreSQL -->
            <property name="eclipselink.target-database" value="PostgreSQL"/>
            
            <property name="eclipselink.ddl-generation" value="none"/>
            
            <property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
            <property name="eclipselink.jdbc.batch-writing.size" value="1000"/>
        </properties>
    </persistence-unit>
</persistence>